{
  "name": "cook-book",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "db": "npx prisma migrate reset --skip-seed && npx prisma db push && npx prisma db seed",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:styles": "stylelint '{styles,src}/**/*.scss'",
    "lint:prettier": "prettier --check '**/*.md'",
    "lint": "npm run lint:js && npm run lint:styles && npm run lint:prettier"
  },
  "dependencies": {
    "@gravity-ui/icons": "^2.10.0",
    "@gravity-ui/uikit": "^6.17.0",
    "@prisma/client": "^5.15.0",
    "bem-cn-lite": "^4.1.0",
    "csvtojson": "^2.0.10",
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@gravity-ui/browserslist-config": "^4.1.0",
    "@gravity-ui/eslint-config": "^3.1.1",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@gravity-ui/stylelint-config": "^4.0.0",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.15.0",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "stylelint": "^15.10.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "extends @gravity-ui/browserslist-config"
  ],
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "lint-staged": {
    "*.{scss}": [
      "stylelint --fix --quiet"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
